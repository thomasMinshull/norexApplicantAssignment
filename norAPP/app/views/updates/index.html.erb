
<!-- logout button -->
<%= button_to("logout", action: "logout")%>

<!-- needs a way to display errors if status isn't saved correctly -->
<% if @update.errors.any? %>
	<div class="error_explanation">
		<h2>The following errors prevented your status update from being published:</h2>
		<ul>
        	<% @update.errors.full_messages.each do |msg| %>
        		<li><%= msg %></li>
			<% end %>
			
		</ul>
    </div>
<% end %>

<!-- status update form --> 

<%= form_for @update, url: {action: "create"} do |f| %>
	<table>
		<tr>
			<th><%=f.label(:status, "What's going on???")%></th>
			<td><%=f.text_field(:status) %><td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td><%= f.submit 'Publish', :class => 'submit button' %></td>
		</tr>
	</table>
<% end %>

